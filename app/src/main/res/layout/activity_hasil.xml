<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.activity.Hasil"
    android:background="@drawable/bgm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:padding="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:paddingLeft="3dp"
                android:layout_margin="4dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_orang">

            </ImageView>

            <TextView
                android:id="@+id/textViewKetLulus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:maxLines="4"
                android:layout_marginRight="10dp"
                android:text="@string/keterangan"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/textViewKetTidak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:maxLines="4"
                android:layout_marginRight="10dp"
                android:text="@string/ket_tidak_lulus"
                android:textSize="18sp"></TextView>


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:gravity="center"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textSize="20sp"
                    android:padding="4dp"
                    android:layout_margin="2dp">

                </TextView>

                <TextView
                    android:id="@+id/textViewNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:background="#FFFF"
                    android:padding="4dp"
                    android:layout_margin="2dp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Absen"
                    android:textSize="20sp"
                    android:padding="4dp"
                    android:layout_margin="2dp">

                </TextView>
                <TextView
                    android:id="@+id/textViewAbsen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:backgroundTint="@android:color/white"
                    android:background="#FFFF"
                    android:layout_margin="2dp">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelas"
                    android:textSize="20sp"
                    android:padding="4dp"
                    android:layout_margin="2dp">

                </TextView>

                <TextView
                    android:id="@+id/textViewKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:background="#FFFF"
                    android:padding="4dp"
                    android:backgroundTint="@android:color/white"
                    android:layout_margin="2dp">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skor"
                    android:textSize="20sp"
                    android:padding="4dp"
                    android:layout_margin="2dp">

                </TextView>

                <TextView
                    android:id="@+id/tvSkorAkhir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:background="#FFFF"
                    android:padding="4dp"
                    android:backgroundTint="@android:color/white"
                    android:layout_margin="2dp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnKoreksi"
                android:layout_marginTop="20dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Lihat Koreksi"
                android:textSize="14sp"
                android:padding="10dp"
                android:backgroundTint="@color/colorPrimary">

            </Button>

            <Button
                android:id="@+id/btnKirim"
                android:layout_marginTop="20dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Kirim"
                android:textSize="14sp"
                android:padding="10dp"
                android:backgroundTint="@color/colorPrimary">

            </Button>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_home">
        </ImageView>

        <ImageView
            android:id="@+id/ivkeluar"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_back">
        </ImageView>
    </LinearLayout>


</RelativeLayout>